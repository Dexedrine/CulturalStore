{% extends 'CSDesignBundle:Commun:commun.html.twig' %}

{% block css %}
<link href="{{ asset('bundles/csproduct/css/product.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block body %}
<div class="product-detail row">
	<div class="span4">
		{% block image %} <img class="image" src="{{ image }}" alt="Image" />
		{% endblock %}
	</div>

	<div class="product-information span5">
		<div class="general-information row-fluid">
			{% block general %}
			<h3 class="name">{{ product.name }}</h3>
			<p class="description">{{ product.description }}</p>

			{% block price %} <span class="price">{{ price }} €</span> {%
			endblock %} {% endblock general%}
		</div>

		<div class="properties row-fluid">
			{% block properties %} {% if product.properties|length > 0 %} <span>Autres
				informations : </span>
			<ul>
				{% for property in product.properties %} {% if property.name !=
				"price" and property.name != "image" %}
				<li class="{{ property.name }}"><span>{{ property.presentation }} : </span> <span>{{
						property.value }}</span></li> {% endif %} {% endfor %}
			</ul>
			
			{% endif %} {% endblock properties %}
		</div>

		<div class="row-fluid action-buttons">
			<div class="span6">
				<a class="btn btn-large btn-block btn-info"
					href="{{ path("add_product",{"product_id" : product.id}) }}"><i
					class="icon-shopping-cart"></i>Ajouter au panier</a>
			</div>
		</div>
	</div>

	<div class="communities span3">
		<div>
			<h5>Ce produit intéresse les communautés&nbsp;:</h5>
			<span>romans d'amour</span> - <span>fantastique</span> - <span>vampires</span>
		</div>
	</div>
</div>
{% endblock body %}
