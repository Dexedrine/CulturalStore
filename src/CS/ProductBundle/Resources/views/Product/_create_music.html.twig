

<h1>Création de produit</h1>
<hr />

<form action="{{ path('cs_product_create_music') }}" method="post" {{ form_enctype(form) }}
	class="form-horizontal" novalidate>

	{{ form_errors(form) }}
	<table>
		<tr>
			<td>{{ form_label(form.name, 'Nom du produit') }}</td>
			<td>{{ form_widget(form.name, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.description, 'Description') }}</td>
			<td>{{ form_widget(form.description, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.price, 'Prix') }}</td>
			<td>{{ form_widget(form.price, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.image, "URL de l'image") }}</td>
			<td>{{ form_widget(form.image, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.duree, 'Durée (en minutes)') }}</td>
			<td>{{ form_widget(form.duree, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.genre, 'Genre') }}</td>
			<td>{{ form_widget(form.genre, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.nbPistes, 'Nombre de pistes') }}</td>
			<td>{{ form_widget(form.nbPistes, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.artiste, 'Artiste') }}</td>
			<td>{{ form_widget(form.artiste, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.format, 'Format du fichier') }}</td>
			<td>{{ form_widget(form.format, {'attr': {'class': ''}}) }}</td>
		</tr>
		<tr>
			<td>{{ form_label(form.file, 'Telecharger votre fichier') }}</td>
			<td>{{ form_widget(form.path, {'attr': {'class': ''}}) }}</td>
		</tr>
	</table>
	<br /> <input type="submit" value="Cr&eacute;er le produit" />

	{{ form_rest(form) }}
</form>
