{% extends 'CSDesignBundle:Commun:commun.html.twig' %}

{% block css %}
<link href="{{ asset('bundles/cscartcss/checkout.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="payment">
	<h1>Paiement</h1>
	
	<table>
		<tr>
			<td>Numéro de carte bancaire</td>
			<td><input type="number" name="cb" maxlength="16"></td>
		</tr>
		<tr>
			<td>Date de validité</td>
			<td><input type="date" name="date" maxlength="8"></td>
		</tr>
		<tr>
			<td>Code de vérification</td>
			<td><input type="number" name="code" maxlength="3"></td>
		</tr>
	</table>
	
	<div class="row-fluid action-buttons">
		<div class="span3">
			<a class="btn btn-large btn-block btn-info"
				href="{{ path("validate_payment", {'cart': cart.id}) }}"><i
				class="icon-shopping-cart"></i>Valider le paiement</a>
		</div>
	</div>
</div>
{% endblock %}
