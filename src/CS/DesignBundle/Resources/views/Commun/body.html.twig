<!-- Mise en place du carousel à 3 slides -->
<div class="row">
	<div class="span12">
		<div class="carousel slide" id="superCarousel">
			<ol class="carousel-indicators">
				<li data-target="#superCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#superCarousel" data-slide-to="1"></li>
				<li data-target="#superCarousel" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="item active">
					<img src="{{ asset('bundles/csdesign/img/cyanide.png') }}"
						alt="Cyanide" />
					<div class="carousel-caption">
						<p>Le dernier Cyanide est disponible !</p>
					</div>
				</div>

				<div class="item">
					<img src="{{ asset('bundles/csdesign/img/bateau.jpg') }}"
						alt="ReportageBateau" />
					<div class="carousel-caption">
						<p>Un superbe reportage sur la construction de yacht !</p>
					</div>
				</div>

				<div class="item">
					<img src="{{ asset('bundles/csdesign/img/cyanide2.png') }}"
						alt="LePetitPrince" />
					<div class="carousel-caption">
						<p>Tome 3 de TeaTime !</p>
					</div>
				</div>
			</div>
			<a class="carousel-control left" data-slide="prev"
				href="#superCarousel">&lsaquo;</a> <a class="carousel-control right"
				data-slide="next" href="#superCarousel">&rsaquo;</a>
		</div>
	</div>

</div>

<!-- Mise en place des minis carousels pour la suggestion de produit par communauté -->

<!-- Row qui va contenir le 1er carousel de suggestion de produit -->
<div class="row">
	<div class="span9">

		{% if is_granted("ROLE_CLIENT") %} {% for community in
		user.communities %}
		<h5>Suggestion pour la communauté {{ community }}</h5>

		{% render(controller('CSProductBundle:Search:searchByCommunity', {
		'community': community })) %} {% endfor%} {% else %}
		<h5>Suggestion pour le thème Musique</h5>
		{% render(controller('CSProductBundle:Search:searchByType', { 'type':
		'music' })) %}
		<h5>Suggestion pour le thème Livres</h5>
		{% render(controller('CSProductBundle:Search:searchByType', { 'type':
		'book' })) %}
		<h5>Suggestion pour le thème Jeux</h5>
		{% render(controller('CSProductBundle:Search:searchByType', { 'type':
		'game' })) %} {% endif %}
	</div>

	<!-- Mise en place de la colonne latérale haute pour indiquer les derniers avis déposés -->
	{% render(url('show_top5_comment')) %}
</div>

<!-- Indication des top gratuits et payants toutes communautés confondues -->

<div class="row">
	<div class="span6 topFree">
		<h5>Top gratuit sur Cultural Store</h5>
		{% render(controller('CSProductBundle:Search:searchFree')) %}

	</div>

	<div class="span6 topPaying">
		<h5>Top payant sur Cultural Store</h5>
		{% render(controller('CSProductBundle:Search:searchNotFree')) %}
	</div>
</div>







